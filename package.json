{
  "name": "project-name",
  "version": "0.0.1",
  "description": "A description for your project.",
  "main": "./dist/your-main-js-file.js",
  "author": {
    "name": "YOUR NAME",
    "url": "http://link-to-your-website.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "http://link-to-your-git-repo.com"
  },
  "browserslist": [
    "last 2 version",
    "not dead"
  ],
  "scripts": {
    "stylelint": "npx stylelint \"src/sass/**/*.scss\"",
    "stylelint:fix": "npx stylelint --fix \"src/sass/**/*.scss\"",
    "lint": "npx eslint \"**/*.js\"",
    "lint:fix": "npx eslint \"**/*.js\" --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.scss": [
      "npm run stylelint:fix",
      "git add"
    ],
    "*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "dotenv": "^7.0.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "stylelint": "^9.10.1",
    "stylelint-config-airbnb": "0.0.0",
    "stylelint-order": "^2.2.1",
    "stylelint-scss": "^3.5.4"
  }
}
